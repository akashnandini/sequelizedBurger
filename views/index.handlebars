<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Eat-Da-Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <center><img alt="burger" class="img-responsive image" width="250px" height="200px"
                    src="assets/image/burger.jpg">
                </img></center>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-5">
            <!--<h3>Available Burgers</h3>-->
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="collection-item available">
                    {{id}}. {{this.burger_name}}
                    <input type="text" name="customer_name" id="customer_name">
                    <button class="change-devoured btn btn-sm devour pull-left" data-id="{{id}}"
                        data-newdevoured="{{Devoured}}">
                        Devour It!
                    </button>
                </li>
                <br>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5">
            <!--<h3>Devoured Burgers</h3>-->
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="collection-item devoured">
                    {{id}}. {{this.burger_name}} (Eaten by {{this.Customer.customer_name}})
                </li>
                <br>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-12 text-center">
            <form class="create-form">
                <div class="form-group">
                    <!-- <label for="bg">Burger Name:</label> -->
                    <textarea type="text" id="burger" name="name"></textarea><br>
                    <button class="btn btn-default" type="submit">Submit</button>
                    <h5 class="text-center text">Enter a burger you want to eat then click Submit button.</h5>
                </div>
            </form>
        </div>
    </div>




</div>